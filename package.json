    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.3",
    "@types/node": "^10.5.2",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
